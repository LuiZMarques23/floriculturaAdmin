<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="15dp"
    app:cardElevation="8dp"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dados do Cliente"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/txtEndereco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bairro: sdssdsdsdsdsdsd  Rua e Número:  54555 Cidade e Estado:  dddd"
            android:textSize="16sp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/txtCelular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Celular: 99809890890"
            android:textSize="16sp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="30dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Detalhes do Produto"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginHorizontal="20dp"/>

            <TextView
                android:id="@+id/txtProduto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome:  Sapato Masculino Ferracini Casual Derby de Couro"
                android:textSize="16sp"
                android:layout_marginHorizontal="20dp"/>

            <TextView
                android:id="@+id/txtPreco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Preço: R$ 49.90"
                android:textSize="16sp"
                android:layout_marginHorizontal="20dp"/>

            <TextView
                android:id="@+id/txtTamanhoCalcado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tamanho do calçado: 43"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginHorizontal="20dp"/>

            <TextView
                android:id="@+id/txtStatusEntrega"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status de Entrega:  Em andamento"
                android:textSize="16sp"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:layout_marginHorizontal="20dp"/>

            <TextView
                android:id="@+id/txtStatusDePagamento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status de pagamento:  Pagamento aprovado"
                android:textSize="16sp"
                android:layout_marginHorizontal="20dp"/>

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/black"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="20dp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>


